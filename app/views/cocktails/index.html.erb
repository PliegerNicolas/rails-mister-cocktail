<div class="page">
  <div class="header">
    <div class="header-item"><h1>RailsMisterCocktail</h1></div>
    <div class="header-item"><%= link_to "New cocktail", new_cocktail_path %></div>
  </div>
  <div class="content">
    <ul id="cocktails-list">
      <% @cocktails.each do |cocktail| %>
      <li class="cocktail">
        <%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %>
        <ul id="doses-list">
          <% cocktail.doses.each do |dose| %>
          <li class="cocktail-dose">
            <%= dose.description %> <%= Ingredient.find(dose.ingredient_id).name %>
          </li>
          <% end %>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>
</div>
